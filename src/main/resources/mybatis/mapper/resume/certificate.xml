<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pickmeup.jobstartup.resume.repository.ResumeRepository">
    <insert id="insertCertificate" parameterType="CertificateDTO">
        INSERT INTO CERTIFICATE (RESUME_NO, CER_NAME, CER_ISSUER, CER_DATE)
        VALUES
        <foreach collection="certificateDTOList" item="certificateDTO" separator=",">
            (#{certificateDTO.resume_no}, #{certificateDTO.cer_name}, #{certificateDTO.cer_issuer}, #{certificateDTO.cer_date})
        </foreach>
    </insert>

    <delete id="deleteCertificate" parameterType="int">
        <![CDATA[
        DELETE CERTIFICATE
        WHERE RESUME_NO=#{resume_no}
        ]]>
    </delete>
</mapper>